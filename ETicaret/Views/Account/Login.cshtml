@model ETicaret.Models.Account.LoginModels
@{
    ViewBag.Title = "Kullanıcı Giriş Sayfası";
}
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        @using (Html.BeginForm())
        {

            <div class="panel panel-default shadow">
                <div class="panel-heading text-center">
                    <div class="row">
                        <div class="col-md-4">
                            <h3>
                                <span class="fa fa-sign-in fa-3x"></span>
                            </h3>
                        </div>
                        <div class="col-md-8 text-right">
                            <h2>Giriş</h2>
                            <small style="color:red;">@TempData["Info"]</small><br />
                            @if (ViewBag.ReError != null && string.IsNullOrEmpty((string)ViewBag.ReError) == false)
                            {
                                <span style="color:red;">@ViewBag.ReError</span>
                            }
                            else
                            {
                                <small>Email,Şifre Doldurunuz..</small>
                            }
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <center>
                            <img src="http://placehold.it/125x125" class="img-circle img-responsive" />
                        </center>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control", placeholder = "Email Giriniz", type = "email", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control", placeholder = "Şifrenizi Giriniz..", type = "password", required = "required" })
                    </div>
                </div>
                <div class="panel-footer text-right">
                    <a href="~/Account/ForgotPassword" class="btn btn-warning">
                        <span class="glyphicon glyphicon-asterisk"></span> Şifremi Unuttum!
                    </a>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-log-in"></span> Giriş Yap
                    </button>
                </div>
            </div>
        }
    </div>
</div>

