@model ETicaret.Models.Account.RegisterModels
@{
    ViewBag.Title = "Kayıt Sayfası";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        @using (Html.BeginForm())
        {
            <div class="panel panel-default shadow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-4">
                            <h3>
                                <span class="fa fa-user-plus fa-3x"></span>
                            </h3>
                        </div>
                        <div class="col-md-8 text-right">
                            <h2>Kayıt Ol</h2>
                            @if (ViewBag.ReError != null && string.IsNullOrEmpty((string)ViewBag.ReError) == false)
                            {
                                <span style="color:red;">@ViewBag.ReError</span>
                            }
                            else
                            {
                                <small>AD,Soyad,Email,Şifre Doldurunuz..</small>
                            }
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <center>
                            <img src="http://placehold.it/125x125" class="img-circle img-responsive" />
                        </center>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Name, new { @class = "form-control", placeholder = "Adınızı Giriniz..", type = "text", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Surname, new { @class = "form-control", placeholder = "Soyadınızı Giriniz..", type = "text", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control", placeholder = "Email Giriniz", type = "email", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control", placeholder = "Şifrenizi Giriniz..", type = "password", required = "required", maxlength = "11" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.rePassword, new { @class = "form-control", placeholder = "Tekrar Şifrenizi Giriniz..", type = "password", required = "required", maxlength = "11" })
                    </div>
                </div>
                <div class="panel-footer text-right">
                    <a href="@Url.Action("Login","Account")" class="btn btn-info">
                        <span class="glyphicon glyphicon-log-in"></span> Giriş
                    </a>
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-saved"></span> Kayıt Ol
                    </button>
                </div>
            </div>
        }
    </div>
</div>

